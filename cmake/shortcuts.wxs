<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
    <Fragment>
        <DirectoryRef Id="PROGRAM_MENU_FOLDER">
            <Component Id="CM_CLEARSETTINGS_SHORTCUT" Guid="*">
                <Shortcut Id="CM_SP_bin.kadas_clearsettings" 
                          Name="KADAS Albireo (Factory settings)" 
                          Target="[#CM_FP_bin.kadas.exe]" 
                          Arguments="--clearsettings" 
                          WorkingDirectory="CM_DP_bin"/>
                
                <!-- Ensures component gets installed -->
                <RegistryValue Root="HKCU" 
                               Key="Software\OPENGIS.ch\KADAS Albireo" 
                               Name="installed" 
                               Type="integer" 
                               Value="1" 
                               KeyPath="yes"/>
            </Component>
        </DirectoryRef>
    </Fragment>
</Wix>